<%= link_to email, id: dom_id(email, :link), class: class_names("block p-4 hover:bg-blue-50", { "bg-blue-100" => email == @email }),
  data: { turbo_frame: :detail, turbo_action: :advance } do %>
  <p class="text-lg font-bold truncate"><%= email.subject %></p>
  <p class="text-slate-700 truncate"><%= email.sender %></p>
  <p class="text-sm text-slate-500 line-clamp-2"><%= email.body %></p>
<% end %>